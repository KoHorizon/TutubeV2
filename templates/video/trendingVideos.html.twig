{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    body {
        margin-left: 3%;
        margin-right: 3%;
    }
    .videos {
        /* display: flex; */
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
        display: grid;
        grid-template-columns: repeat(auto-fill,570px);   
    }
    .video {

    }
    .title > p {
        font-size: 50px;
        font-weight: 600;
    }
</style>
<div class="title">
    <p>In trending</p>
</div>
<div class="videos">
    {% for video in trendingVideo %}
    <div class="video" id="redirectIframe">
            <a class="href" href="{{ path('view_video',{url_id : video.url_id }) }}">
                <iframe 
                    width="560"
                    height="315"
                    src="https://www.youtube.com/embed/{{ video.url_id }}"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                ></iframe> 
                <p>{{video.name}}</p>
            </a>
            <p>{{video.date|date('d-m-Y')}}</p>
            <p>{{video.tutuber }}</p>
            <p>{{video.views|length}} views</p>
        </div>
    {% endfor %} 
</div>

<script>

</script>

{% endblock %}

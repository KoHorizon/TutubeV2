{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    body {
        margin-left: 3%;
        margin-right: 3%;
    }
    .videos {
        /* display: flex; */
        justify-content: space-between;
        flex-wrap: wrap;
        width: 100%;
        display: grid;
        grid-template-columns: repeat(auto-fill,570px);   
    }
    .search {
        display: flex;
        flex-direction: row;
        align-items: center;
        height: 50px;
        /* background-color: black; */
    }
    label[for=form_name]
    {
        display: none;
    }
    .search > div {
        width:100%;
    }
    .searchInput{
        width: 100%;
    }
    .searchBtn {
        margin-left: 10px;
        border: none;
        background-color: rgb(0, 98, 255);
        color: white;
        border-radius: 10px;
        padding: 10px;
    }
</style>
<div class="search">
    <div>
    {{ form_start(formSearch) }}
        {{ form_row(formSearch.name, {
          'label': 'search',
          'attr': {'class': 'searchInput'}
        }) }}
    </div>
    <div class="">
        <button type="submit" class="btn btn-outline-secondary ">Submit</button>
    </div>
    {{ form_end(formSearch) }}
</div>
<div class="videos">
    {% for video in videos %}
    <div class="video" id="redirectIframe">
            <a class="href" href="{{ path('view_video',{url_id : video.url_id }) }}">
                <iframe 
                    width="560"
                    height="315"
                    src="https://www.youtube.com/embed/{{ video.url_id }}"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                ></iframe> 
                <p>{{video.name}}</p>
            </a>
            <p>{{video.date|date('d-m-Y')}}</p>
            <p>{{video.tutuber }}</p>
            <p>{{video.views|length}} views</p>
        </div>
    {% endfor %} 
</div>

<script>

</script>

{% endblock %}

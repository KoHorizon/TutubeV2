{% extends 'baseAdmin.html.twig' %}

{% block title %}TutubeV2 Admin{% endblock %}
{% block style %}
    <style>
        .videoList {
            display: flex;
            flex-direction: column;
        }
        .videoList {
            margin-top: 10px;
            color: black;
            font-size: 23px;
            padding: 15px 51px ;
            border: 1px black solid;
            border-radius: 15px;
        }
        .videos > a {
            color: black;
            text-decoration: none;
        }
    </style>
{% endblock %}
{% block body %}
    <div class="videos">
        {% for video in videos %}
            <a href="">
                <div class="videoList">
                    <span class="videoName">{{ video.name }}</span>
                    <span class="date">{{ video.date|date('d-m-Y') }}</span>
                </div>
            </a>
        {% endfor %}
    </div>
{% endblock %}
